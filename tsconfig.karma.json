{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    // Generating d.ts files needs to be disabled to not pollute the build output directory ("./lib").
    "declaration": false,
    "declarationMap": false,
    "target": "ES5",
    "module": "ES2015",
    "outDir": "./lib/esm"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
